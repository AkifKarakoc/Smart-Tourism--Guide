<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="007-create-badges-table" author="tourguide">
        <createTable tableName="badges">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="icon_url" type="varchar(500)"/>
            <column name="is_active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet id="007-create-user-badges-table" author="tourguide">
        <createTable tableName="user_badges">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="badge_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="earned_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="user_badges"
                             columnNames="user_id, badge_id"
                             constraintName="uk_user_badges"/>

        <addForeignKeyConstraint baseTableName="user_badges"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_user_badges_user"/>

        <addForeignKeyConstraint baseTableName="user_badges"
                                 baseColumnNames="badge_id"
                                 referencedTableName="badges"
                                 referencedColumnNames="id"
                                 constraintName="fk_user_badges_badge"/>
    </changeSet>

</databaseChangeLog>
